{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "noEmitHelpers": true,
    "declaration": true,
    "removeComments": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "lib": [
      "dom",
      "es6",
      "es2015.iterable"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules"
  ]
}
