{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "createRelease": true,
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md",
    "**/package.json",
    "**/package-lock.json",
    "**/tsconfig.json",
    "**/tslint.json",
    "**/webpack.config.js"
  ]
}
